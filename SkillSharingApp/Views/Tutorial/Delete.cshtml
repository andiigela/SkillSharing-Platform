@using SkillSharingApp_BAL.DTOs
@model TutorialDto

@{
    ViewData["Title"] = "Delete Tutorial";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="modal-body">
    <h2>Delete Tutorial</h2>
    <div>
        <h4>Tutorial Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Duration</dt>
            <dd class="col-sm-10">@Model.Duration</dd>

            <dt class="col-sm-2">Instructions</dt>
            <dd class="col-sm-10">@Model.Instructions</dd>

            <dt class="col-sm-2">VideuUrl</dt>
            <dd class="col-sm-10">@Model.VideoUrl</dd>
        </dl>

        <div class="alert alert-danger">
            <strong>Warning!</strong> You are about to delete this tutorial. This action cannot be undone.
        </div>
        <form action="@Url.Action("DeleteConfirmed", "Tutorial", new { id = Model.Id })" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this tutorial?')">Delete</button>
                <a href="@Url.Action("Index", "Tutorial")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
