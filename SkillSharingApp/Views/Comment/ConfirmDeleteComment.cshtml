@using SkillSharingApp_BAL.DTOs;
@model CommentDto

@{
    ViewData["Title"] = "Confirm Delete Comment";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Confirm Delete Comment</h1>

<div>
    <p>Are you sure you want to delete this comment?</p>
    <p><strong>Comment ID:</strong> @Model.Id</p>
    <p><strong>Content:</strong> @Model.Content</p>
    <form asp-action="DeleteComment" asp-controller="Comment" asp-route-commentId="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Details", "Tutorial", new { id = Model.TutorialId })" class="btn btn-secondary">Cancel</a>
    </form>
</div>
