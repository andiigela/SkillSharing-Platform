@using SkillSharingApp_BAL.DTOs
@model CommentDto

@{
    ViewData["Title"] = "Delete Comment";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete Comment</h1>

<p>Are you sure you want to delete this comment?</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FirstName @Model.Lastname</h5>
        <p class="card-text">@Model.Content</p>
    </div>
</div>

<form method="post" action="@Url.Action("ConfirmDeleteComment", "Comment", new { commentId = Model.Id })">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Details", "Tutorial", new { id = Model.TutorialId })">Cancel</a>
</form>

