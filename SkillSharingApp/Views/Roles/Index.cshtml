@using Microsoft.AspNetCore.Identity;
@using SkillSharingApp.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<IdentityRole>
@addTagHelper Identity.CustomTagHelpers.*, Identity
@{
    ViewData["Title"] = "Workshops";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<a asp-action="Create" class="btn btn-primary" style="margin-bottom: 10px">Create a Role</a>

<table class="table table-sm table-bordered table-bordered" style="margin-bottom:350px">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>
                <a asp-action="Update" asp-route-id="@role.Id">
                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                </a>
            </td>
            <td>
                <a asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </a>
            </td>
        </tr>
    }
</table>
 
