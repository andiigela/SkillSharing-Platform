@page
@model IndexModel
@{
    ViewData["Title"] = "SkillSharingApp";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex justify-content-center align-items-center">
    <div class="container position-relative" data-aos="zoom-in" data-aos-delay="100">
        <h1>Learn from Experts</h1>
        <h2>
            Access courses taught by industry experts eager to share their knowledge.
        </h2>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn-get-started">Get Started</a>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
                    <img src="assets/img/about.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                    <h3>Welcome to SkillSharingApp!</h3>
                    <p class="fst-italic">
                        SkillSharingApp is your gateway to a world of learning. We provide tutorials, workshops, and lessons on a wide range of topics to help you enhance your skills and achieve your goals.
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> Explore various tutorials on web development, marketing, design, and more.</li>
                        <li><i class="bi bi-check-circle"></i> Join workshops and events to gain practical knowledge from experts.</li>
                        <li><i class="bi bi-check-circle"></i> Learn at your own pace and track your progress on our platform.</li>
                    </ul>
                    <p>
                        Start your learning journey today with SkillSharingApp!
                    </p>

                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Counts Section ======= -->
    <section id="counts" class="counts section-bg">
        <div class="container">

            <div class="row counters">

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="1232" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Students</p>
                </div>

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="64" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Courses</p>
                </div>

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="42" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Events</p>
                </div>

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="15" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Trainers</p>
                </div>

            </div>

        </div>
    </section><!-- End Counts Section -->
    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-4 d-flex align-items-stretch">
                    <div class="content">
                        <h3>Why Choose SkillSharingApp?</h3>
                        <p>
                            At SkillSharingApp, we believe in empowering individuals through knowledge and learning. Here's why you should choose us for your learning journey:
                        </p>
                        <div class="text-center">
                            <a asp-area="Identity" asp-page="/Account/Login" class="more-btn">Learn More <i class="bx bx-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon-boxes d-flex flex-column justify-content-center">
                        <div class="row">
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box mt-4 mt-xl-0">
                                    <i class="bx bx-receipt"></i>
                                    <h4>Tutorials</h4>
                                    <p>Explore a vast collection of tutorials on various topics to enhance your skills.</p>
                                </div>
                            </div>
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box mt-4 mt-xl-0">
                                    <i class="bx bx-cube-alt"></i>
                                    <h4>Workshops</h4>
                                    <p>Join interactive workshops conducted by industry experts for hands-on learning.</p>
                                </div>
                            </div>
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box mt-4 mt-xl-0">
                                    <i class="bx bx-images"></i>
                                    <h4>Lessons</h4>
                                    <p>Learn from our well-structured and engaging lessons to master new skills.</p>
                                </div>
                            </div>
                        </div>
                    </div><!-- End .content-->
                </div>
            </div>

        </div>
    </section><!-- End Why Us Section -->
    <!-- ======= Features Section ======= -->
    <section id="features" class="features">
        <div class="container" data-aos="fade-up">

            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                <div class="col-lg-3 col-md-4">
                    <div class="icon-box">
                        <i class="ri-store-line" style="color: #ffbb2c;"></i>
                        <h3><a target="_blank" asp-controller="Tutorial" asp-action="Index">Tutorials</a></h3>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 mt-4 mt-md-0">
                    <div class="icon-box">
                        <i class="ri-bar-chart-box-line" style="color: #5578ff;"></i>
                        <h3><a target="_blank" asp-controller="Workshops" asp-action="Index">Workshops</a></h3>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 mt-4 mt-md-0">
                    <div class="icon-box">
                        <i class="ri-calendar-todo-line" style="color: #e80368;"></i>
                        <h3><a href="#">Lessons</a></h3>
                    </div>
                </div>
                <!-- Add more feature topics as needed for your SkillSharingApp -->
            </div>

        </div>
    </section><!-- End Features Section -->
